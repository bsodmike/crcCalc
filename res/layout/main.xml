<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		  android:orientation="vertical"
    		  android:layout_width="fill_parent"
    		  android:layout_height="fill_parent" android:background="@color/bgColor">
    <TextView android:id="@+id/text"
    		  android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20dp" android:textColor="@color/textColor" android:padding="10dp" android:text="@string/title"/>
	
	<EditText android:layout_width="fill_parent" android:layout_marginTop="10dp" android:inputType="numberSigned|numberDecimal" android:layout_height="wrap_content" android:id="@+id/editText"></EditText>
	

    <RadioGroup
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical" android:layout_marginTop="5dp" android:checkedButton="@+id/radioC">	
		<RadioButton android:layout_width="wrap_content" 
					 android:text="@string/celsius" 
					 android:textColor="@color/textColor" 
					 android:paddingLeft="45dp" 
					 android:layout_height="40dp" 
					 android:id="@+id/radioC" 
					 android:paddingBottom="0dp" android:layout_marginBottom="5dp"></RadioButton>
		<RadioButton android:layout_width="wrap_content" 
		 			 android:text="@string/fahrenheit" 
		 			 android:textColor="@color/textColor" 
		 			 android:paddingLeft="45dp" 
		 			 android:layout_height="40dp" 
		 			 android:id="@+id/radioF" 
		 			 android:paddingBottom="0dp"></RadioButton>
	</RadioGroup>
	<LinearLayout android:layout_height="wrap_content"
				  android:id="@+id/LinearLayout02"
			      android:layout_marginTop="10dp" android:layout_width="fill_parent" android:gravity="center">
		<Button android:layout_width="wrap_content" 
				android:text="@string/calc" 
				android:id="@+id/buttonCalc" android:layout_height="wrap_content"></Button>
	
	</LinearLayout>
	

</LinearLayout>


